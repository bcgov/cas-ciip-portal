{
  "schema":
  {
    "type": "object",
    "title": "Emissions",
    "properties":{
      "sourceTypes":{
        "title": "Source Types",
        "minItems":1,
        "type": "array",
        "items":{
          "$ref":"#/definitions/sourceType"
        }
      }
    },
    "definitions": {
      "sourceType": {
        "type": "object",
        "properties": {
          "sourceTypeName": {
            "type": "string",
            "default": "Stationary Combustion"
          },
          "gases": {
            "title": "gases",
            "type": "array",
            "minItems":1,
            "items":{
              "$ref":"#/definitions/gas"
            }
          }
        }
      },
      "gas" : {
        "type": "object",
        "properties": {
          "gasType": {
            "title": "Gas Type",
            "type": "string",
            "default": "CO2 from non-bio"
          },
          "quantity": {
            "title": "Tonnes (CO2)",
            "type": "number",
            "default": 20
          },
          "gwp": {
            "title": "GWP",
            "type": "number",
            "default": 250
          },
          "calculatedQuantity": {
            "title": "Tonnes (CO2 equivalent)",
            "type": "number",
            "default": 100
          }
        }
      }
    }
  },
  "uiSchema": {
    "listOfSourceTypes":{
      "ui:options": {
        "addable": false,
        "orderable": false,
        "removable": false
      },
      "items":{
        "ui:order": ["sourceTypeName","gases"],
        "sourceTypeName":{
          "classNames": "hidden-title",
          "ui:col-md": 12,
          "ui:field": "emissionSource"
        },
        "gases": {
          "items": {
            "ui:field": "emissionGas"
          },
          "ui:options": {
            "addable": false,
            "orderable": false,
            "removable": false
          }
        }
      }
    }
  }
}
