{
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Name"
      },
      "description": {
        "type": "string",
        "title": "Description"
      },
      "units": {
        "type": "string",
        "title": "Production units of measurement"
      },
      "requiresEmissionAllocation": {
        "type": "boolean",
        "title": "Product requires allocation of emissions?",
        "enumNames": [" Yes", " No"]
      },
      "isCiipProduct": {
        "type": "boolean",
        "title": "CIIP (benchmarked) product"
      }
    },
    "dependencies": {
      "requiresEmissionAllocation": {
        "oneOf": [
          {
            "properties": {
              "requiresEmissionAllocation": {
                "const": true
              }
            }
          },
          {
            "properties": {
              "addPurchasedElectricityEmissions": {
                "type": "boolean",
                "title": "Add purchased electricity?",
                "enumNames": [
                  " Yes",
                  " No"
                ]
              },
              "subtractExportedElectricityEmissions": {
                "type": "boolean",
                "title": "Subtract exported electricity?",
                "enumNames": [
                  " Yes",
                  " No"
                ]
              },
              "addPurchasedHeatEmissions": {
                "type": "boolean",
                "title": "Add purchased heat?",
                "enumNames": [
                  " Yes",
                  " No"
                ]
              },
              "subtractExportedHeatEmissions": {
                "type": "boolean",
                "title": "Subtract exported heat?",
                "enumNames": [
                  " Yes",
                  " No"
                ]
              },
              "subtractGeneratedElectricityEmissions": {
                "type": "boolean",
                "title": "Subtract generated electricity?",
                "enumNames": [
                  " Yes",
                  " No"
                ]
              },
              "subtractGeneratedHeatEmissions": {
                "type": "boolean",
                "title": "Subtract generated heat?",
                "enumNames": [
                  " Yes",
                  " No"
                ]
              },
              "requiresEmissionAllocation": {
                "const": false
              }
            },
            "required": [
              "addPurchasedElectricityEmissions",
              "subtractExportedElectricityEmissions",
              "addPurchasedHeatEmissions",
              "subtractExportedHeatEmissions",
              "subtractGeneratedElectricityEmissions",
              "subtractGeneratedHeatEmissions"]
          }
        ]
      },
      "isCiipProduct": {
        "oneOf": [
          {
            "properties": {
              "isCiipProduct": {
                "const": true
              }
            }
          },
          {
            "properties": {
              "requiresProductAmount": {
                "type": "boolean",
                "title": "Set reporting of production amount as required?",
                "enumNames": [
                  " Yes",
                  " No"
                ]
              },
              "isCiipProduct": {
                "const":false
              }
            },
            "required": [
              "requiresProductAmount"]
          }
        ]
      }
    },
    "required": ["name", "units", "requiresEmissionAllocation", "isCiipProduct"]
  },
  "uiSchema": {
    "name": {
      "ui:col-md": 4
    },
    "units": {
      "ui:col-md": 4
    },
    "description": {
      "ui:col-md": 4
    },
    "requiresEmissionAllocation": {
      "ui:widget": "radio"
    },
    "isCiipProduct": {
      "ui:help": "Non-CIIP products emissions are excluded from payment allocation. If a product has a fixed incentive ratio instead of a benchmark, please create a benchmark and use the mininmum and maximum incentive ratio options"
    },
    "requiresProductAmount": {
      "ui:widget": "radio",
      "ui:help": "Should the reporting the product amount for this Non-CIIP product be required?"
    },
    "addPurchasedElectricityEmissions": {
      "ui:widget": "radio",
      "ui:help": "Should purchased electricity be added to the facility emissions when calculating emission intensity?"
    },
    "subtractExportedElectricityEmissions": {
      "ui:widget": "radio",
      "ui:help": "Should exported electricity be subtracted from the facility emissions when calculating emission intensity?"
    },
    "addPurchasedHeatEmissions": {
      "ui:widget": "radio",
      "ui:help": "Should purchased heat be added to the facility emissions when calculating emission intensity?"
    },
    "subtractExportedHeatEmissions": {
      "ui:widget": "radio",
      "ui:help": "Should exported heat be subtracted from the facility emissions when calculating emission intensity?"
    },
    "subtractGeneratedElectricityEmissions": {
      "ui:widget": "radio",
      "ui:help": "Should generated electricity be subtracted from the facility emissions when calculating emission intensity?"
    },
    "subtractGeneratedHeatEmissions": {
      "ui:widget": "radio",
      "ui:help": "Should generated heat be subtracted from the facility emissions when calculating emission intensity?"
    }
  }
}
