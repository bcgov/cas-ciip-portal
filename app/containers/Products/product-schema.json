{
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Name"
      },
      "description": {
        "type": "string",
        "title": "Description"
      },
      "units": {
        "type": "string",
        "title": "Production units of measurement"
      },
      "requiresEmissionAllocation": {
        "type": "boolean",
        "title": "Product requires allocation of emissions?",
        "enumNames": [" Yes", " No"]
      },
      "isCiipProduct": {
        "type": "boolean",
        "title": "CIIP (benchmarked) product"
      }
    },
    "dependencies": {
      "requiresEmissionAllocation": {
        "oneOf": [
          {
            "properties": {
              "requiresEmissionAllocation": {
                "const": true
              }
            }
          },
          {
            "properties": {
              "addImportedElectricityEmissions": {
                "type": "boolean",
                "title": "Add imported electricity?",
                "enumNames": [
                  " Yes",
                  " No"
                ]
              },
              "subtractExportedElectricityEmissions": {
                "type": "boolean",
                "title": "Subtract exported electricity?",
                "enumNames": [
                  " Yes",
                  " No"
                ]
              },
              "addImportedHeatEmissions": {
                "type": "boolean",
                "title": "Add imported heat?",
                "enumNames": [
                  " Yes",
                  " No"
                ]
              },
              "subtractExportedHeatEmissions": {
                "type": "boolean",
                "title": "Subtract exported heat?",
                "enumNames": [
                  " Yes",
                  " No"
                ]
              },
              "requiresEmissionAllocation": {
                "const": false
              }
            },
            "required": ["addImportedElectricityEmissions", "subtractExportedElectricityEmissions", "addImportedHeatEmissions", "subtractExportedHeatEmissions"]
          }
        ]
      }
    },
    "required": ["name", "units", "requiresEmissionAllocation", "isCiipProduct"]
  },
  "uiSchema": {
    "name": {
      "ui:col-md": 4
    },
    "units": {
      "ui:col-md": 4
    },
    "description": {
      "ui:col-md": 4
    },
    "requiresEmissionAllocation": {
      "ui:widget": "radio"
    },
    "isCiipProduct": {
      "ui:help": "Non-CIIP products emissions are excluded from payment allocation. If a product has a fixed incentive ratio instead of a benchmark, please create a benchmark and use the mininmum and maximum incentive ratio options"
    },
    "addImportedElectricityEmissions": {
      "ui:widget": "radio",
      "ui:help": "Should imported electricity be added to the facility emissions when calculating emission intensity?"
    },
    "subtractExportedElectricityEmissions": {
      "ui:widget": "radio",
      "ui:help": "Should exported electricity be subtracted from the facility emissions when calculating emission intensity?"
    },
    "addImportedHeatEmissions": {
      "ui:widget": "radio",
      "ui:help": "Should imported heat be added to the facility emissions when calculating emission intensity?"
    },
    "subtractExportedHeatEmissions": {
      "ui:widget": "radio",
      "ui:help": "Should exported heat be subtracted from the facility emissions when calculating emission intensity?"
    }
  }
}
