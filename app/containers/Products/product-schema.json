{
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Name"
      },
      "description": {
        "type": "string",
        "title": "Description"
      },
      "units": {
        "type": "string",
        "title": "Production units of measurement"
      },
      "requiresEmissionAllocation": {
        "type": "boolean",
        "title": "Product requires allocation of emissions?",
        "enumNames": [" Yes", " No"]
      },
      "isCiipProduct": {
        "type": "boolean",
        "title": "CIIP (benchmarked) product"
      }
    },
    "dependencies": {
      "requiresEmissionAllocation": {
        "oneOf": [
          {
            "properties": {
              "requiresEmissionAllocation": {
                "const": false
              }
            }
          },
          {
            "properties": {
              "includesImportedElectricity": {
                "type": "boolean",
                "title": "Include imported electricity?",
                "enumNames": [
                  " Yes",
                  " No"
                ]
              },
              "includesExportedElectricity": {
                "type": "boolean",
                "title": "Include exported electricity?",
                "enumNames": [
                  " Yes",
                  " No"
                ]
              },
              "includesImportedHeat": {
                "type": "boolean",
                "title": "Include imported heat?",
                "enumNames": [
                  " Yes",
                  " No"
                ]
              },
              "includesExportedHeat": {
                "type": "boolean",
                "title": "Include exported heat?",
                "enumNames": [
                  " Yes",
                  " No"
                ]
              },
              "requiresEmissionAllocation": {
                "const": true
              }
            },
            "required": ["includesImportedElectricity", "includesExportedElectricity", "includesImportedHeat", "includesExportedHeat"]
          }
        ]
      }
    },
    "required": ["name", "units", "requiresEmissionAllocation", "isCiipProduct"]
  },
  "uiSchema": {
    "name": {
      "ui:col-md": 4
    },
    "units": {
      "ui:col-md": 4
    },
    "description": {
      "ui:col-md": 4
    },
    "requiresEmissionAllocation": {
      "ui:widget": "radio"
    },
    "isCiipProduct": {
      "ui:help": "Non-CIIP products emissions are excluded from payment allocation. If a product has a fixed incentive ratio instead of a benchmark, please create a benchmark and use the mininmum and maximum incentive ratio options"
    },
    "includesImportedElectricity": {
      "ui:widget": "radio"
    },
    "includesExportedElectricity": {
      "ui:widget": "radio"
    },
    "includesImportedHeat": {
      "ui:widget": "radio"
    },
    "includesExportedHeat": {
      "ui:widget": "radio"
    }
  }
}
