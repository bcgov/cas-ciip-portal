{
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Name"
      },
      "description": {
        "type": "string",
        "title": "Description"
      },
      "units": {
        "type": "string",
        "title": "Production units of measurement"
      },
      "requiresEmissionAllocation": {
        "type": "boolean",
        "title": "Allocation of emissions is required",
        "enumNames": [" Yes", " No"],
        "default": true
      },
      "isCiipProduct": {
        "type": "boolean",
        "title": "CIIP (benchmarked) product",
        "enumNames": [" Yes", " No"],
        "default": true
      }
    },
    "dependencies": {
      "requiresEmissionAllocation": {
        "oneOf": [
          {
            "properties": {
              "requiresEmissionAllocation": {
                "const": true
              }
            }
          },
          {
            "properties": {
              "addPurchasedElectricityEmissions": {
                "type": "boolean",
                "title": "Purchased electricity is added to facility emissions",
                "enumNames": [" Yes", " No"],
                "default": false
              },
              "subtractExportedElectricityEmissions": {
                "type": "boolean",
                "title": "Exported electricity is subtracted from facility emissions",
                "enumNames": [" Yes", " No"],
                "default": false
              },
              "addPurchasedHeatEmissions": {
                "type": "boolean",
                "title": "Purchased heat is added to facility emissions",
                "enumNames": [" Yes", " No"],
                "default": false
              },
              "subtractExportedHeatEmissions": {
                "type": "boolean",
                "title": "Exported heat is subtracted from facility emissions",
                "enumNames": [" Yes", " No"],
                "default": false
              },
              "subtractGeneratedElectricityEmissions": {
                "type": "boolean",
                "title": "Generated electricity is subtracted from facility emissions",
                "enumNames": [" Yes", " No"],
                "default": false
              },
              "subtractGeneratedHeatEmissions": {
                "type": "boolean",
                "title": "Generated heat is subtracted from facility emissions",
                "enumNames": [" Yes", " No"],
                "default": false
              },
              "requiresEmissionAllocation": {
                "const": false
              }
            },
            "required": [
              "addPurchasedElectricityEmissions",
              "subtractExportedElectricityEmissions",
              "addPurchasedHeatEmissions",
              "subtractExportedHeatEmissions",
              "subtractGeneratedElectricityEmissions",
              "subtractGeneratedHeatEmissions"
            ]
          }
        ]
      },
      "isCiipProduct": {
        "oneOf": [
          {
            "properties": {
              "isCiipProduct": {
                "const": true
              }
            }
          },
          {
            "properties": {
              "requiresProductAmount": {
                "type": "boolean",
                "title": "Production amount needs to be reported",
                "enumNames": [" Yes", " No"],
                "default": true
              },
              "isCiipProduct": {
                "const": false
              }
            },
            "required": ["requiresProductAmount"]
          }
        ]
      }
    },
    "required": ["name", "requiresEmissionAllocation", "isCiipProduct"]
  },
  "uiSchema": {
    "name": {
      "ui:col-md": 4
    },
    "units": {
      "ui:col-md": 4
    },
    "description": {
      "ui:col-md": 4
    },
    "requiresEmissionAllocation": {
      "ui:widget": "radio"
    },
    "isCiipProduct": {
      "ui:widget": "radio",
      "ui:help": "Non-CIIP products emissions are excluded from payment allocation. If a product has a fixed incentive ratio instead of a benchmark, please create a benchmark and use the mininmum and maximum incentive ratio options"
    },
    "requiresProductAmount": {
      "ui:widget": "radio"
    },
    "addPurchasedElectricityEmissions": {
      "ui:widget": "radio"
    },
    "subtractExportedElectricityEmissions": {
      "ui:widget": "radio"
    },
    "addPurchasedHeatEmissions": {
      "ui:widget": "radio"
    },
    "subtractExportedHeatEmissions": {
      "ui:widget": "radio"
    },
    "subtractGeneratedElectricityEmissions": {
      "ui:widget": "radio"
    },
    "subtractGeneratedHeatEmissions": {
      "ui:widget": "radio"
    }
  }
}
