{
  "name": "ggircs-industry-ciip-portal",
  "version": "1.0.0",
  "description": "The online portal for Industry to apply and track their CIIP applications",
  "scripts": {
    "pretest": "npm run build:relay",
    "test": "jest",
    "predev": "npm run build:schema && npm run build:relay",
    "dev": "node server",
    "build": "npm run build:schema && npm run build:relay && npm run build:next",
    "build:schema": "postgraphile -X -c postgres://localhost/ggircs_dev -s ggircs_portal --export-schema-graphql server/schema.graphql --export-schema-json server/schema.json --classic-ids --sort-export && echo >> server/schema.json",
    "build:relay": "relay-compiler --src ./ --exclude '**/.next/**' '**/node_modules/**' '**/test/**'  '**/__generated__/**' '**/server/**' --schema ./server/schema.graphql --verbose",
    "build:next": "next build",
    "start": "NODE_ENV=production node server",
    "format": "xo --fix",
    "lint": "xo",
    "storybook": "start-storybook"
  },
  "xo": {
    "ignores": [
      "./static/survey-creator.css",
      "./static/bootstrap.min.css"
    ],
    "extends": [
      "xo-react",
      "plugin:jest/recommended",
      "plugin:relay/recommended"
    ],
    "plugins": [
      "jest",
      "relay"
    ],
    "envs": [
      "node",
      "browser",
      "jest"
    ],
    "space": true,
    "prettier": true,
    "parser": "babel-eslint",
    "rules": {
      "unicorn/filename-case": 0,
      "import/no-unassigned-import": 0,
      "no-unused-expressions": [
        1,
        {
          "allowTernary": true
        }
      ],
      "react/prop-types": 0,
      "max-depth": [
        1,
        {
          "max": 8
        }
      ]
    }
  },
  "engines": {
    "node": "10.14.1",
    "yarn": "1.12.3"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@graphile-contrib/pg-many-to-many": "^1.0.0-beta.12",
    "ace-builds": "^1.4.6",
    "body-parser": "^1.19.0",
    "bootstrap": "^3.4.1",
    "cors": "^2.8.5",
    "diff": "^4.0.1",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "graphql": "^14.4.2",
    "graphql-relay": "^0.6.0",
    "isomorphic-fetch": "^2.2.1",
    "jquery": "^3.4.1",
    "keycloak-connect": "^7.0.0",
    "next": "^9.1.1",
    "pg": "^7.11.0",
    "popper.js": "^1.15.0",
    "postgraphile": "^4.4.4",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-bootstrap": "^1.0.0-beta.9",
    "react-dom": "^16.9.0",
    "react-mathjax": "^1.0.1",
    "react-mathjax2": "^0.0.2",
    "react-relay": "^7.0.0",
    "react-relay-network-modern": "^4.1.0",
    "react-relay-network-modern-ssr": "^1.2.4",
    "relay-runtime": "^7.0.0",
    "sinon": "^7.4.1",
    "survey-creator": "^1.1.15",
    "survey-react": "^1.1.1",
    "surveyjs-widgets": "^1.1.17"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@storybook/addon-a11y": "^5.2.1",
    "@storybook/addon-storyshots": "^5.2.4",
    "@storybook/addons": "^5.2.1",
    "@storybook/react": "^5.2.1",
    "@zeit/next-css": "^1.0.1",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-macros": "^2.6.1",
    "babel-plugin-relay": "^7.0.0",
    "dotenv": "^8.1.0",
    "dotenv-webpack": "^1.5.4",
    "easygraphql-tester": "^5.1.6",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^6.5.1",
    "eslint-config-xo": "^0.27.1",
    "eslint-config-xo-react": "^0.20.0",
    "eslint-plugin-jest": "^23.0.2",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "eslint-plugin-relay": "^1.3.11",
    "graphql-query-test-mock": "^0.12.0",
    "graphql-tag-pluck": "^0.8.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-canvas-mock": "^2.1.2",
    "nock": "^9.6.1",
    "node-fetch": "^2.6.0",
    "relay-compiler": "^7.0.0",
    "relay-test-utils": "^7.0.0",
    "react-test-renderer": "^16.10.2",
    "require-context.macro": "^1.2.2",
    "webpack": "^4.41.0",
    "xo": "^0.25.0"
  },
  "resolutions": {
    "@storybook/**/open": "^7.0.0",
    "xo/open-editor/open": "^7.0.0"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "setupFilesAfterEnv": [
      "<rootDir>lib/setupTests.js",
      "jest-canvas-mock"
    ]
  }
}
