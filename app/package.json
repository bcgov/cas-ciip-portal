{
  "name": "ggircs-industry-ciip-portal",
  "version": "1.0.0",
  "description": "The online portal for Industry to apply and track their CIIP applications",
  "scripts": {
    "pretest": "npm run build:relay",
    "test": "jest",
    "predev": "npm run build:schema && npm run build:relay",
    "dev": "node server",
    "build": "npm run build:schema && npm run build:relay && npm run build:next",
    "build:schema": "postgraphile -X -c postgres://localhost/ggircs_dev -s ggircs_portal --export-schema-graphql server/schema.graphql --export-schema-json server/schema.json --classic-ids --sort-export && echo >> server/schema.json",
    "build:relay": "relay-compiler --src ./ --exclude --artifactDirectory ./__generated__ --language typescript '**/.next/**' '**/node_modules/**' '**/test/**'  '**/__generated__/**' '**/server/**' --schema ./server/schema.graphql --verbose",
    "build:next": "next build",
    "start": "NODE_ENV=production node server",
    "format": "xo --fix",
    "lint": "xo",
    "storybook": "start-storybook"
  },
  "xo": {
    "ignores": [
      "./static/survey-creator.css",
      "./static/bootstrap.min.css"
    ],
    "extends": [
      "xo-typescript",
      "xo-react",
      "plugin:jest/recommended",
      "plugin:relay/recommended"
    ],
    "plugins": [
      "jest",
      "relay",
      "shopify"
    ],
    "envs": [
      "node",
      "browser",
      "jest"
    ],
    "extensions": [
      "ts",
      "tsx"
    ],
    "space": true,
    "prettier": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "@typescript-eslint/indent": 0,
      "@typescript-eslint/semi": 0,
      "@typescript-eslint/no-var-requires": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/camelcase": 0,
      "react/jsx-uses-vars": 1,
      "shopify/react-no-multiple-render-methods": 1,
      "unicorn/filename-case": 0,
      "import/no-unassigned-import": 0,
      "@typescript-eslint/quotes": [
        1,
        "single",
        {
          "avoidEscape": true
        }
      ],
      "no-unused-expressions": [
        1,
        {
          "allowTernary": true
        }
      ],
      "import/extensions": [
        "error",
        "never",
        {
          "graphql": "always"
        }
      ],
      "react/prop-types": 0,
      "max-depth": [
        1,
        {
          "max": 8
        }
      ]
    }
  },
  "engines": {
    "node": "10.14.1",
    "yarn": "1.12.3"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@graphile-contrib/pg-many-to-many": "^1.0.0-beta.12",
    "ace-builds": "^1.4.6",
    "body-parser": "^1.19.0",
    "bootstrap": "^3.4.1",
    "cors": "^2.8.5",
    "diff": "^4.0.1",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "graphql": "^14.4.2",
    "graphql-relay": "^0.6.0",
    "graphql-voyager": "^1.0.0-rc.28",
    "isomorphic-fetch": "^2.2.1",
    "keycloak-connect": "^8.0.0",
    "next": "^9.1.1",
    "pg": "^7.11.0",
    "popper.js": "^1.15.0",
    "postgraphile": "^4.4.4",
    "react": "^16.9.0",
    "react-bootstrap": "^1.0.0-beta.9",
    "react-dom": "^16.9.0",
    "react-jsonschema-form": "^1.8.0",
    "react-mathjax": "^1.0.1",
    "react-mathjax2": "^0.0.2",
    "react-relay": "^7.0.0",
    "react-relay-network-modern": "^4.1.0",
    "react-relay-network-modern-ssr": "^1.2.4",
    "relay-runtime": "^7.0.0",
    "sinon": "^7.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@storybook/addon-a11y": "^5.2.1",
    "@storybook/addon-storyshots": "^5.2.4",
    "@storybook/addons": "^5.2.1",
    "@storybook/react": "^5.2.1",
    "@types/jest": "^24.0.21",
    "@types/react-jsonschema-form": "^1.6.6",
    "@types/react-relay": "^7.0.0",
    "@types/relay-runtime": "^6.0.9",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "@zeit/next-css": "^1.0.1",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-macros": "^2.6.1",
    "babel-plugin-relay": "^7.0.0",
    "dotenv": "^8.1.0",
    "dotenv-webpack": "^1.5.4",
    "easygraphql-tester": "^5.1.6",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^6.5.1",
    "eslint-config-xo": "^0.27.1",
    "eslint-config-xo-react": "^0.20.0",
    "eslint-config-xo-typescript": "^0.21.0",
    "eslint-plugin-jest": "^23.0.2",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "eslint-plugin-relay": "^1.3.11",
    "eslint-plugin-shopify": "^32.0.0",
    "graphql-query-test-mock": "^0.12.0",
    "graphql-tag-pluck": "^0.8.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-canvas-mock": "^2.1.2",
    "jest-raw-loader": "^1.0.1",
    "json-schema": "^0.2.5",
    "nock": "^9.6.1",
    "node-fetch": "^2.6.0",
    "react-test-renderer": "^16.10.2",
    "relay-compiler": "^7.0.0",
    "relay-compiler-language-typescript": "^10.1.0",
    "relay-test-utils": "^7.0.0",
    "require-context.macro": "^1.2.2",
    "typescript": "3.7.2",
    "webpack": "^4.41.0",
    "xo": "^0.25.0"
  },
  "resolutions": {
    "@storybook/**/open": "^7.0.0",
    "xo/open-editor/open": "^7.0.0",
    "xo/prettier": "^1.19.1",
    "relay-compiler/yargs/os-locale/mem": "^4.0.0",
    "jest/jest-cli/@jest/core/@jest/reporters/istanbul-reports/handlebars": "^4.5.3"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)",
      ".storybook/Storyshots.test.ts"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.ts",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "setupFilesAfterEnv": [
      "<rootDir>lib/setupTests.ts",
      "jest-canvas-mock"
    ],
    "transform": {
      ".*(ts|tsx|js|jsx)$": "babel-jest",
      "\\.graphql$": "jest-raw-loader"
    }
  }
}
